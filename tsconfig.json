{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Custom Node 16",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "rootDir": "./",
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./build"
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "exclude": [
    "codegen.ts",
    "./test",
    "sequelize.js"
  ],
  "include": [
    "public"
  ]
}