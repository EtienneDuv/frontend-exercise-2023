{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "rootDir": "./",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./build",
    "sourceMap": true,
    "strictNullChecks": true
  },
  "exclude": [
    "codegen.ts",
    "./test",
    "node_modules",
    "build",
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./@types"
  ],
}